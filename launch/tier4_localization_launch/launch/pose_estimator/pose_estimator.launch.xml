<?xml version="1.0"?>
<launch>
  <group>
    <arg name="input_map_points_topic" default="/map/pointcloud_map"/>
    <arg name="input/pointcloud" default="/localization/util/downsample/pointcloud"/>
    <arg name="input_initial_pose_topic" default="/localization/pose_twist_fusion_filter/biased_pose_with_covariance"/>
    <arg name="output_pose_topic" default="/localization/pose_estimator/pose"/>
    <arg name="output_pose_with_covariance_topic" default="/localization/pose_estimator/pose_with_covariance"/>

    <include file="$(find-pkg-share ndt_scan_matcher)/launch/ndt_scan_matcher.launch.xml">
      <arg name="input_map_points_topic" value="$(var input_map_points_topic)"/>
      <arg name="input/pointcloud" value="$(var input/pointcloud)"/>
      <arg name="input_initial_pose_topic" value="$(var input_initial_pose_topic)"/>

      <arg name="output_pose_topic" value="$(var output_pose_topic)"/>
      <arg name="output_pose_with_covariance_topic" value="$(var output_pose_with_covariance_topic)"/>

      <arg name="param_file" value="$(var ndt_scan_matcher_param_path)"/>
    </include>
  </group>
</launch>
